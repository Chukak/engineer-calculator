<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER"
          prefWidth="280" prefHeight="120"
          fx:controller="calc.math.gui.controllers.SetEPSSceneController">
    <HBox GridPane.rowIndex="0" GridPane.columnIndex="0">
        <Label prefHeight="60" prefWidth="140" text="Epsilon to compare:"/>
        <TextField fx:id="epsilonToCompareData" prefHeight="40" prefWidth="140"/>
    </HBox>
    <HBox GridPane.rowIndex="1" GridPane.columnIndex="0">
        <Separator prefWidth="230" prefHeight="40" opacity="0"/>
        <Button prefHeight="30" prefWidth="40"
                text="Set"
                onAction="#setEPS"/>
    </HBox>
</GridPane>
